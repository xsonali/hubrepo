{
  "name": "Terraform Azure Dev",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "terraform": "latest",
    "azure-cli": "latest",
    "git": "latest"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "hashicorp.terraform",
        "ms-azuretools.vscode-azureterraform",
        "ms-vscode.azurecli",
        "GitHub.copilot"
      ]
    }
  },
  "postCreateCommand": "az --version && terraform -version"
}
